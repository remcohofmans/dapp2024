<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://liquormenu.io/gt/webservice"
           targetNamespace="http://liquormenu.io/gt/webservice" elementFormDefault="qualified">

    <xs:element name="getLiquorRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="brand" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getLiquorResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="liquor" type="tns:liquor"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>


    <xs:element name="getCheapestLiquorRequest">
        <xs:complexType>
            <xs:sequence>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getCheapestLiquorResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="liquor" type="tns:liquor"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getMostExpensiveLiquorRequest">
        <xs:complexType>
            <xs:sequence>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getMostExpensiveLiquorResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="liquor" type="tns:liquor"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getOrderRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="order" type="tns:order"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getOrderResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="responseText" type="xs:string"/>
                <xs:element name="order" type="tns:order"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getLiquorCardRequest">
        <xs:complexType>
            <xs:sequence>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getLiquorCardResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="liquor" type="tns:liquor" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>


    <xs:complexType name="order">
        <xs:sequence>
            <xs:element name="orderNumber" type="xs:long"/>
            <xs:element name="liquorBrand" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element name="specialInstructions" type="xs:string" minOccurs="0"/>
            <xs:element name="timestamp" type="xs:string"/>
            <xs:element name="deliveryAddress" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="liquor">
        <xs:sequence>
            <xs:element name="brand" type="xs:string"/>
            <xs:element name="price" type="xs:double"/>
            <xs:element name="alcoholPercentage" type="xs:float"/>
            <xs:element name="volume" type="xs:int"/>
            <xs:element name="type" type="xs:string"/>
            <xs:element name="quantity" type="xs:int"/>
        </xs:sequence>
    </xs:complexType>

</xs:schema>
